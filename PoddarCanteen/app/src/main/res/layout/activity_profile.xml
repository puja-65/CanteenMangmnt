<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/homebg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="44.2dp">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/user"
                android:layout_marginLeft="24dp"
                app:civ_border_color="#FF000000" />

            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi, User"
                android:textSize="19.2sp"
                android:textColor="#ffffff"
                android:layout_marginLeft="13.4dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What can \nwe serve you \ntoday?"
            android:textSize="38.4sp"
            android:textColor="#ffffff"
            android:layout_marginTop="53.8dp"
            android:layout_marginLeft="24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rectangle_2"
            android:layout_marginTop="41dp"
            android:layout_marginLeft="22.1dp"
            android:layout_marginRight="21.1dp"
            android:paddingTop="15.5dp"
            android:paddingBottom="15.5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.5dp"
                android:src="@drawable/ic_search_black_24dp"
                android:tint="#d0d0d0"/>

            <customfonts.EditText_Roboto_Regular
                android:id="@+id/searchfield"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Search for food..."
                android:textColor="#607D8B"
                android:background="#00000000"
                android:layout_marginLeft="8.7dp"
                android:textSize="14.4sp"
                android:textColorHint="#9b9b9b"/>

        </LinearLayout>
        <customfonts.MyTextView_Roboto_Regular
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22.1dp"
            android:layout_marginRight="21.1dp"
            android:layout_marginTop="22.1dp"
            android:background="@drawable/btnrectangle"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:text="SEARCH"
            android:textColor="#ffffff"
            android:textSize="14.4sp" />
    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/buttonText"
        app:itemIconTint="@color/colorPrimaryDark"
        app:itemTextColor="@color/colorPrimaryDark"
        app:menu="@menu/menu_admin">
    </android.support.design.widget.BottomNavigationView>

</RelativeLayout>
