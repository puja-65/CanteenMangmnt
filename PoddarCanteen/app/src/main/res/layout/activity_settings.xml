<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:orientation="vertical"
    android:background="@drawable/e">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF1493">
        <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/backbtn3"
            android:background="@drawable/ic_arrow_back_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Settings"
            android:textSize="35sp"
            android:textColor="#000"
            android:layout_marginLeft="70dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30sp">
        <TextView
            android:layout_width="320sp"
            android:layout_height="25sp"
            android:layout_marginTop="20sp"
            android:text=" If you want to edit your profile"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textAlignment="center"
            android:background="#800080"/>

        <EditText
            android:layout_width="300sp"
            android:layout_height="40sp"
            android:layout_marginTop="20sp"
            android:hint="   Correct Name"
            android:textColorHint="#000"
            android:textSize="20dp"
            android:id="@+id/nam"
            android:autofillHints="" tools:targetApi="o"
            android:textColor="#000"
            android:background="@drawable/white_round"
            android:layout_marginLeft="15sp"/>
        <EditText
            android:layout_width="300sp"
            android:layout_height="40sp"
            android:layout_marginTop="20sp"
            android:autofillHints="" tools:targetApi="o"
            android:textColor="#000"
            android:background="@drawable/white_round"
            android:layout_marginLeft="15sp"
            android:hint="   Correct Phone"
            android:textColorHint="#000"
            android:textSize="20dp"
            android:id="@+id/pho"/>
        <EditText
            android:layout_width="300sp"
            android:layout_height="40sp"
            android:layout_marginTop="20sp"
            android:autofillHints="" tools:targetApi="o"
            android:textColor="#000"
            android:background="@drawable/white_round"
            android:layout_marginLeft="15sp"
            android:hint="   Correct Address"
            android:textColorHint="#000"
            android:textSize="20dp"
            android:id="@+id/addr"/>
        <EditText
            android:layout_width="300sp"
            android:layout_height="40sp"
            android:layout_marginTop="20sp"
            android:autofillHints="" tools:targetApi="o"
            android:textColor="#000"
            android:background="@drawable/white_round"
            android:layout_marginLeft="15sp"
            android:hint="   New Password"
            android:textColorHint="#000"
            android:textSize="20dp"
            android:id="@+id/pas"
            android:inputType="textPassword"/>
        <TextView
            android:layout_width="300sp"
            android:layout_height="40sp"
            android:autofillHints="" tools:targetApi="o"
            android:textColor="#000"
            android:background="@drawable/white_round"
            android:layout_marginLeft="15sp"
            android:textSize="20dp"
            android:id="@+id/em"
            android:layout_marginTop="20sp"
            android:text="  "/>
        <Button
            android:layout_width="320sp"
            android:layout_height="wrap_content"
            android:background="@drawable/accent_round"
            android:layout_marginTop="75dp"
            android:text="Submit"
            android:id="@+id/submi"/></LinearLayout>
</LinearLayout>